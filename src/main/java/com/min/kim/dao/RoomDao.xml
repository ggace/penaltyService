<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.min.kim.dao.RoomDao">
	<select id="getRooms" resultType="Room">
		SELECT * 
		FROM room
		ORDER BY id DESC
	</select>
	
	<select id="getRoom" resultType="Room">
		SELECT * 
		FROM room
		WHERE id=#{id}
	</select>
	
	<insert id="insertRoom">
		INSERT INTO `room`
		SET title=#{title},
		regDate = NOW(),
		updateDate=NOW(),
		adminId = 1
		
	</insert>
	
	<delete id="deleteRoom">
		DELETE FROM `room`
		WHERE id=#{id}
	</delete>
	
	<update id="updateRoom">
		UPDATE `room`
		<set>
			<if test="adminId != null and adminId != ''">
				adminId =#{adminId},
			</if>
			title=#{title},
			updateDate = NOW()
		</set> 
	</update>
	
	<select id="getLastId" resultType="Integer">
		SELECT id
		FROM `room`
		ORDER BY id DESC
		LIMIT 1
	</select>
	
	<insert id="setRoomPw">
		INSERT INTO `roomPw`
		<set>
			roomId=#{id},
			pw = #{pw}
		</set>
	</insert>
	
	<select id="getRoomWithPw" resultType="RoomWithPw">
		SELECT room.*, roomPw.pw
		FROM room
		JOIN roomPw
		ON room.id = roomPw.roomId
		WHERE room.id = #{id}
	</select>
	
	<select id="getRoomsWithPw" resultType="RoomWithPw">
		SELECT room.*, roomPw.pw
		FROM room
		JOIN roomPw
		ON room.id = roomPw.roomId
		ORDER BY id DESC
	</select>
	
	 
	
</mapper>